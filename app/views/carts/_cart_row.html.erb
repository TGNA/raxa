<div class="cart-header">
  <%= form_for order_item, remote: true do |f| %>
    <%= link_to "", order_item, method: :delete, remote: true, class: "close1" %>
    <div class="cart-sec simpleCart_shelfItem">
       <div class="cart-item-info">
          <h3><%= link_to product.description, product_path(product) %><span>Model No: RL-5511S</span></h3>
        <ul class="qty">
          <li><%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %></li>
            <li><%= f.hidden_field :product_id, value: product.id %></li>
            <li><%= f.submit "Actualizar", class: "item_add items" %></li>
        </ul>  
        <div class="delivery">
          Precio unitario: <span style="color: green"><%= number_to_currency order_item.unit_price %></span><br>
          Precio toal: <span style="color: green"><%= number_to_currency order_item.total_price %></span>
                 <div class="clearfix"></div>
        </div>            
      </div>
      <div class="clearfix"></div>          
    </div>
  <% end %>
</div>
